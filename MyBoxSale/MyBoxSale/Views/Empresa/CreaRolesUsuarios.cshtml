@{
    ViewBag.Title = "CreaRolesUsuarios";
}
@model MyBoxSale.Models.USUARIO

<div class="col-md-12 header-empresa">
    <div class="alert text-center">
        Ya casi terminas..
    </div>
</div>

<div class="col-md-6  animated bounceInUp">
    <h2 class="header text-center">Creación de Usuarios</h2>
</div>

<div class="col-md-12  animated bounceInUp">
    <div class="row">
        <div class="col-md-12 form-users" style="padding-top:10px">
        @using (Html.BeginForm("CreaRolesUsuarios", "Empresa", FormMethod.Post))
        { 
            @Html.HiddenFor(x => x.EmpresaId)
            <div class="form-group col-md-6">
                @Html.LabelFor(x => x.Nombre, new { @class="secondary-header"})
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(x => x.Apellidos, new { @class="secondary-header"})
                @Html.TextBoxFor(x => x.Apellidos, new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(x => x.Direccion, new { @class="secondary-header"})
                @Html.TextBoxFor(x => x.Direccion, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(x => x.Telefono, new { @class="secondary-header"})
                @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(x => x.NombreUsuario, new { @class="secondary-header"})
                @Html.TextBoxFor(x => x.NombreUsuario, new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(x => x.Password, new { @class="secondary-header"})
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @required = "required" })
            </div>
            
            <div class="col-md-12 no-padding">
                <button type="submit" class="btn btn-sale btn-lg">Guardar <span class="glyphicon glyphicon-circle-arrow-right"></span></button>
            </div>
}
    </div>
    </div>
</div>