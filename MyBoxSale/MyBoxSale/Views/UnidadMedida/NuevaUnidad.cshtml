@model MyBoxSale.Models.UNIDADMEDIDA

@{
    ViewBag.Title = "Nueva Unidad";
}

<h2>Nueva Unidad de Medida</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Abreviado)
            @Html.TextBoxFor(model => model.Abreviado,new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Abreviado)
        </div>
        <input type="submit" value="Guardar" />
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
