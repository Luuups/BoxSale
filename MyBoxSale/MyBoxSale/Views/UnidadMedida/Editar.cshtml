@model MyBoxSale.Models.UNIDADMEDIDA

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new { @class="form-control" })
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Abreviado)
            @Html.TextBoxFor(model => model.Abreviado,new { @class="form-control" })
            @Html.ValidationMessageFor(model => model.Abreviado)
        </div>
        <input type="submit" value="Guardar" class="btn btn-danger"/>
}

<div>
    @Html.ActionLink("BRegresar", "Index")
</div>
