@{
    ViewBag.Title = "Home Page";
}
@model MyBoxSale.Models.LoginModel
<div class="row custom-row">
    <div class="col-md-6 leftpanel custom-col">
        <div class="pricipal-leftText">
            <h1>Bienvenidos</h1>
        </div>
        <div id="separator"></div>
        <div class="logologin">
            <img src="~/Images/Cuentas_de_usuario.png" class="img-responsive img-rounded" />
        </div>
    </div>
    <div class="col-md-6 custom-col">
        <div class="panel panel-default customPanel">

            <div class="panel-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    <div class="errordiv">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                            @Html.TextBoxFor(x => x.NombreUsuario, new { @class = "form-control",@placeholder="Nombre de Usuario" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password",@placeholder="Contraseña" })
                        </div>
                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(x => x.RememberMe, new { @type = "checkbox" })¿Recordar?
                        </label>
                    </div>
                    <div class="col-md-offset-8">
                    <button type="submit" class="btn btn-danger">Entrar</button>
                        </div>
                }
            </div>
        </div>
    </div>
</div>

